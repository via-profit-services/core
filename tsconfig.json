{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6",
    "types": [
      "node",
      "jest"
    ]
  }
}