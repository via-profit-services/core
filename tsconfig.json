{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "exclude": ["src/**/*.spec.ts", "./dist"],
  "include": ["src/**/*"]
}
